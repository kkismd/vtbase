        A=(N)                   ;               LDA  N
        A=A+(0+X)               ;               ADC  0,X
        (N)=A                   ;               STA  N
        A=Y                     ;               TYA
        A=AC+(1+X)              ;            ADC  1,X
        Y=A                     ;            TAY
.2      <=(0+X)                 ; sta2$:     ASL  0,X
        (=(1+X)                 ;            ROL  1,X
                                ;
        A=(2+X)                 ;            LDA  2,X
        A=A|(3+X)               ;            ORA  3,X
        ;=\,.1                  ;         BNE  sta1$
                                ;
        A=(N)                   ;         LDA  N
        (2+X)=A                 ;         STA  2,X
        (3+X)=Y                 ;         STY  3,X
        X=++                    ;         POP
        A=]                     ;         PLY
        Y=A
        #=!                     ;         RTS

