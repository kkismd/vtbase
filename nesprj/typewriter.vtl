L002    ?=1,"+"
        ?=L001                  ; link filed (to multiply)
;
plus                            ; PLUS:   CLC
        A=(0+X)                 ;         LDA  0,X
        A=A+(2+X)               ;         ADC  2,X
        (2+X)=A                 ;         STA  2,X
        A=(1+X)                 ;         LDA  1,X
        A=AC+(3+X)              ;         ADC  3,X
        (3+X)=A                 ;         STA  3,X
        X=++                    ;         POP
        #=!                     ;         RTS

;----------------------------------------
;; subtract                     ( n1 n2  --  n1-n2 )
L003    ?=1,"="
        ?=L002
;
minus   C=1                     ; MINUS:  SEC
        A=(2+X)                 ;         LDA  2,X
        A=AC-(0+X)              ;         SBC  0,X
        (2+X)=A                 ;         STA  2,X
        A=(3+X)                 ;         LDA  3,X
        A=AC-(1+X)              ;         SBC  1,X
        (3+X)=A                 ;         STA  3,X
        X=++                    ;         POP
        #=!                     ;  mi1$:  RTS

