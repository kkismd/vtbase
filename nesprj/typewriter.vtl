        Y=(2+X)                 ;         LDY  2,X
        (2+X)=A                 ;         STA  2,X
        (0+X)=Y                 ;         STY  0,X

        A=(1+X)                 ;         LDA  1,X
        Y=(3+X)                 ;         LDY  3,X
